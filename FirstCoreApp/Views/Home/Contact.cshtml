   @model ContactUs
 <div class="container" style="margin-top:25px; margin-bottom:25px;">
<div class="col-8">
 
<form asp-action="SaveContact" method="post" >
              <div class="row">
                <div class="col form-group mt-3">
                  <input type="text" class="form-control" asp-for="Name" placeholder="Your Name" required>
                </div>
                <div class="col form-group mt-3">
                  <input type="email" class="form-control" asp-for="Email" placeholder="Your Email" required>
                </div>
              </div>
              <div class="form-group mt-3">
                <input type="text" class="form-control" asp-for="Subject" placeholder="Subject" required>
              </div>
              <div class="form-group mt-3">
                <textarea class="form-control" asp-for="Message" rows="5" placeholder="Message" required></textarea>
              </div>
             
              <div style="margin-top:10px;"><button  class="btn btn-success" type="submit" >Send Message</button></div>
            </form>
            </div></div>